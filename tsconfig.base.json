{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
	"experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom"],
    "paths": {
      "components-lib": ["libs/components-lib/src/index.ts"],
      "future-tech-lib": ["libs/future-tech-lib/src/index.ts"]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  },
  "exclude": ["node_modules", "tmp"]
}
